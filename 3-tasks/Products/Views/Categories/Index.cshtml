@model IEnumerable<Products.Models.Categories>

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Category</a>
</p>

@foreach (var item in Model) {

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow-sm">
                    <img src="/Images/CategoriesImages/@item.CategoryImage" class="card-img-top" alt="@item.CategoryImage">
                    <div class="card-body">
                        <h5 class="card-title">@item.CategoryName</h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.CategoryID" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.CategoryID" class="btn btn-sm btn-outline-secondary">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.CategoryID" class="btn btn-sm btn-outline-secondary">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
           </div>

}
