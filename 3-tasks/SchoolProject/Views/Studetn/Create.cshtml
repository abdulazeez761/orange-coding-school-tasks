@model Student

<div class="container">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6">
                <label for="name">Name:</label>
                <input type="text" id="name" name="StudentName" class="form-control" placeholder="Enter your name.." />
            </div>
            <div class="col-md-6">
                <label for="age">Age:</label>
                <input type="text" id="age" name="StudentAge" class="form-control" placeholder="Enter your age.." />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <label for="active">Active:</label>
                <div class="form-check">
                    <input type="checkbox" id="active" name="IsActive" class="form-check-input" value="true" />
                    <label class="form-check-label" for="active">Is active?</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <label for="photo">Student Photo:</label>
                <div class="file">
                    <input type="file" id="photo" name="StudentPhoto" class="file" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <label for="role">Role:</label>
                <input type="text" id="role" name="Role" class="form-control" placeholder="Enter the role.." />
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
