@model List<Room>
<a class="nav-link text-dark" asp-area="" asp-controller="RoomController1" asp-action="Create">Add New Rooom</a>

<br />
<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
        color: black;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #ddd;
    }

    td {
        font-family: Arial, sans-serif;
        font-size: 14px;
    }
</style>

<table>
    <tr>
        <th>Name</th>
 
    </tr>

    @foreach (Room room in Model)
    {
        <tr>
            <td>@room.RoomName</td>
            <td> <a href="/RoomController1/Delete/@room.RoomId"> Delete @room.RoomName</a></td>
        </tr>
    }
</table>
